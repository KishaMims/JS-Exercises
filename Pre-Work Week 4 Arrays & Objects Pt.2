activeUser = {
  names: 'Jenny',
  age: 45,
  weight: 130,
  color: 'red'
};

function multiplyNumeric(obj) {
  for (let key in obj) {
    if (typeof obj[key] == 'number') {
      obj[key] *= 2;
    }
  }
}

